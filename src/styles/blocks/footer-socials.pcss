.footer-socials{
    display: flex;
    opacity: .3;
}
.footer-socials__item:not(:last-child){
    margin-right: 20px;
}
.footer-socials__link{
    width: 50px;
    height: 50px;
    border: 1px solid #fff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}
.footer-socials__icon{
    width: 20px;
    height: 20px;
    fill: currentColor;
}