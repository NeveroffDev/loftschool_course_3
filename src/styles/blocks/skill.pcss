.skill{
    position: relative;
    display: flex;
    justify-content: center;
}
.skill__title{
    width: 40%;
    text-align: center;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 18px;
    line-height: 24px;
    font-weight: 700;
    opacity: .5;
    @include mediaFix(600px){
        font-size: 14px;
    }
}