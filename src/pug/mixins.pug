mixin icon(name, className)
  - var icon = require(`images/icons/${name}.svg`);
  svg(class=className viewBox=icon.viewBox preserveAspectRatio="none")
    use(xlink:href=icon.url)

mixin image(path, className)
  img(src=require(`images/${path}`) class=className)

mixin skillRound(percent)
  -let radius = 60
  -let center = [75, 75]
  -let width = [10, 20]
  svg(width='150', height='150', viewBox='0 0 150 150' preserveAspectRatio='none')
    defs
      linearGradient#Gradient1
        stop(offset='0%', stop-color='#4a00ed')
        stop(offset='100%', stop-color='#9300e8')
    circle(cx=`${center[0]}`, cy=`${center[1]}`, r=radius, fill='none', stroke='#e6e6e6', stroke-width=`${width[0]}`)
    circle(cx=`${center[0]}`, cy=`${center[0]}`, r=radius, fill='none', stroke='url(#Gradient1)', stroke-width=`${width[1]}`, stroke-dasharray=`${radius*2*Math.PI}`, stroke-dashoffset=`${(radius*2*Math.PI)*(1-percent/100)}` transform="rotate(180 75 75)")

